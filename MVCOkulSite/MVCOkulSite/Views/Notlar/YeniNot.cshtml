@model MVCOkulSite.Models.Entity.Notlar
@{
    ViewBag.Title = "YeniNot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>
            Öğrenci ID
        </label>
        <input type="text" class="form-control" name="OgrID" />
    </div>
    <br />
    <div>
        <label>
            Ders
        </label>
        @Html.DropDownListFor(m=>m.DersID, (List<SelectListItem>)ViewBag.ders, "Ders Seçiniz..", new { @class = "form-control" })
    </div>
    <br />
    <div>
        <label>
            Sınav 1
        </label>
        <input type="text" class="form-control" name="Sinav1" />
    </div>
    <br />
    <div>
        <label>
            Sınav 2
        </label>
        <input type="text" class="form-control" name="Sinav2" />
    </div>
    <br />
    <div>
        <label>
            Sınav 3
        </label>
        <input type="text" class="form-control" name="Sinav3" />
    </div>
    <br />
    <div>
        <label>
            Proje
        </label>
        <input type="text" class="form-control" name="Proje" />
    </div>
    <br />
    <div>
        <label>
            Ortalama
        </label>
        <input type="text" class="form-control" name="Ortalama" />
    </div>
    <br />
    <div>
        <label>
            Durum
        </label>
        <input type="text" class="form-control" name="Durum" />
    </div>
    <br />
    <div>
        <button href="/Hesapla/AnaSayfa" class="btn btn-primary" style="margin-top:10px">Hesapla</button>
        <button class="btn btn-primary" style="margin-top:10px">Yeni Not Giriş</button>
    </div>

</form>


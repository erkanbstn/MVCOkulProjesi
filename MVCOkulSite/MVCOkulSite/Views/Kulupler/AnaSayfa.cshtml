@using MVCOkulSite.Models.Entity
@model List<Kulupler>
@{
    ViewBag.Title = "AnaSayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>
            KULÜP ID
        </th>
        <th>
            KULÜP AD
        </th>
        <th>
            İŞLEMLER
        </th>
    </tr>
    <tbody>
        @foreach (var kulup in Model)
        {
        <tr>
            <td>@kulup.KulupID</td>
            <td>@kulup.KulupAd</td>
            <td><a href="/Kulupler/KulupSil/@kulup.KulupID" class="btn btn-danger">SİL</a>
            <a href="/Kulupler/KulupGuncelle/@kulup.KulupID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>

        }
    </tbody>
</table>
<a href="/Kulupler/YeniKulup" class="btn btn-primary">Yeni Kulüp Ekle</a>

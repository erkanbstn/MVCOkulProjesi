@using MVCOkulSite.Models.Entity
@model List<Dersler>
@{
    ViewBag.Title = "AnaSayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>
            DERS ID
        </th>
        <th>
            DERS AD
        </th>
        <th>
            İŞLEMLER
        </th>
    </tr>
    <tbody>
        @foreach (var ders in Model)
        {
            <tr>
                <td>@ders.DersID</td>
                <td>@ders.DersAd</td>
                <td>
                    <a href="/Home/DersSil/@ders.DersID" class="btn btn-danger">SİL</a>
                    <a href="/Home/DersGuncelle/@ders.DersID" class="btn btn-success">GÜNCELLE</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Home/YeniDers" class="btn btn-primary">Yeni Ders Ekle</a>

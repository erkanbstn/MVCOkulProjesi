@using MVCOkulSite.Models.Entity;
@model List<Ogrenciler>
@{
    ViewBag.Title = "AnaSayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>
            ÖĞRENCİ ID
        </th>
        <th>
            ÖĞRENCİ AD
        </th>
        <th>
            ÖĞRENCİ SOYAD
        </th>
        <th>
            ÖĞRENCİ  CİNSİYET
        <th>
            ÖĞRENCİ  KULÜP
        </th>
        <th>
            
            İŞLEMLER
        </th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
        <tr>
            <td>@ogr.OgrID</td>
            <td>@ogr.OgrAd</td>
            <td>@ogr.OgrSoyad</td>
            <td>@ogr.OgrCinsiyet</td>
            <td>@ogr.Kulupler.KulupAd</td>
            <td>
                <a href="/Ogrenciler/OgrenciSil/@ogr.OgrID" class="btn btn-danger">SİL</a>
                <a href="/Ogrenciler/OgrenciGuncelle/@ogr.OgrID" class="btn btn-success">GÜNCELLE</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a href="/Ogrenciler/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Ekle</a>

@model MVCOkulSite.Models.Entity.Ogrenciler
@{
    ViewBag.Title = "YeniOgrenci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>
            Öğrenci Adı
        </label>
        <input type="text" class="form-control" name="OgrAd" />
    </div>
    <br />
    <div>
        <label>
            Öğrenci Soyadı
        </label>
        <input type="text" class="form-control" name="OgrSoyad" />
    </div>
    <br />
    <div>
        <label>
            Öğrenci Fotoğrafı
        </label>
        <input type="text" class="form-control" name="OgrFotograf" />
    </div>
    <br />
    <div>
        <label>
            Öğrenci Cinsiyeti
        </label>
        <input type="text" class="form-control" name="OgrCinsiyet" />
    </div>
    <br />
    <div>
        <label>
            Öğrenci Kulübü
        </label>
        @Html.DropDownListFor(m => m.Kulupler.KulupID, (List<SelectListItem>)ViewBag.dgr, "Kulüp Seçiniz", new { @class = "form-control" })
    </div>
    <br />
    <div>
        <button class="btn btn-primary" style="margin-top:10px">Öğrenci Ekle</button>
    </div>

</form>


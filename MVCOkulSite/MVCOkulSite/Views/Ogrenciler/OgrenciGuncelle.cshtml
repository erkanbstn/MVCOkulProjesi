@model MVCOkulSite.Models.Entity.Ogrenciler
@{
    ViewBag.Title = "OgrenciGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>OgrenciGuncelle</h2>

@using (Html.BeginForm("Guncelle", "Ogrenciler", FormMethod.Post))
{

<div class="form-group">
    @Html.LabelFor(m => m.OgrID)
    @Html.TextBoxFor(m => m.OgrID, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.OgrAd)
    @Html.TextBoxFor(m => m.OgrAd, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.OgrSoyad)
    @Html.TextBoxFor(m => m.OgrSoyad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.OgrKulup)
    @Html.DropDownListFor(m => m.Kulupler.KulupID, (List<SelectListItem>)ViewBag.dgr, "Kulüp Seçiniz", new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.OgrCinsiyet)
    @Html.TextBoxFor(m => m.OgrCinsiyet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(m => m.OgrFotograf)
    @Html.TextBoxFor(m => m.OgrFotograf, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(m => m.OgrID)
</div>
    <div>
        <button class="btn btn-primary">
            Güncelle
        </button>
    </div>

}